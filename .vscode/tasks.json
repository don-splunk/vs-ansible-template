{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Ansible step 1: Create python venv and upgrade pip",
            "type": "shell",
            "command": "python3 -m venv ./venv; source venv/bin/activate; pip install --upgrade pip",
            "windows": {
                "command": "python venv"
            },
            "group": "Setup",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Ansible step 2: Get ansible",
            "type": "shell",
            "command": "source ./venv/bin/activate; pip3 install -r requirements.txt",
            "windows": {
                "command": "python requirements"
            },
            "group": "Setup",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}